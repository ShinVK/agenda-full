    <%- include('includes/head') %>
    <%- include('includes/nav') %>

    <div class="container">
      <div class="row">
        <div class="col-lg-2"></div>

        <div class="col-lg-8 my-5">
          <h1 class="text-center">Contato</h1>
          <p class="text-center lead">Crie ou edite seu contato est√£o abaixo.</p>
        </div>
        <%- include('includes/messages'); %>

        <% if(contato._id) { %>

          <form action="/contato/edit/<%= contato._id %>" method="post">
        <% } else { %>
          <form action="/contato/register" method="post">

        <% } %>
          <input type="hidden" name="_csrf" value=<%= csrfToken %>>
          <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">Nome: </label>
            <input type="text" class="form-control" id="exampleInputEmail1"
            name="nome"
            value="<%= contato.nome %>"
            aria-describedby="emailHelp">
          </div>

          <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">Sobrenome: </label>
            <input type="text" class="form-control" id="exampleInputEmail1"
            name="sobrenome"
            value="<%= contato.sobrenome %>"

            aria-describedby="emailHelp">
          </div>

          <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">Email: </label>
            <input type="email" class="form-control" id="exampleInputEmail1"
            name="email"
            value="<%= contato.email %>"

            aria-describedby="emailHelp">
          </div>
         

          <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">Telefone: </label>
            <input type="tel" class="form-control" id="exampleInputEmail1"
            name="phone"
            value="<%= contato.telefone %>"

            aria-describedby="emailHelp">
          </div>
     
          <button type="submit" class="btn btn-primary">Salvar</button>
        </form>
  
        <div class="col-lg-2"></div>
      </div>
    </div>




    <%- include('includes/footer') %>

